<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>RRecipe</title>

    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <script src="/js/bootstrap.min.js"></script>
</head>

<body>
    <%- include('partials/navbar') %>

    <div class="container-fluid">
        <%- include('partials/flash') %>

        <div class="row justify-content-center">
            <div class="col-6 mt-5">
                <h1>Create A New Recipe</h1>
                <form action="/recipes/new" method="post" novalidate class="needs-validation">
                    <div class="row pt-3">
                        <div class="col-6">
                            <label for="recipeName">Recipe Name</label>
                            <input type="text" name="name" class="form-control" id="recipeName" placeholder="Type name here.." required>
                        </div>
                        <div class="col-6">
                            <label for="prepTime">Preparation Time</label>
                            <input type="text" name="preparationTime" class="form-control" id="prepTime" placeholder="Minutes here.." required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="imageUrl">Image Url</label>
                        <input type="text" name="image" class="form-control" id="imageUrl" placeholder="Paste url here.." required>
                    </div>
                    <div class="row g-0 pt-3">
                        <div class="col-8">
                            <label for="ingText">Add Ingredient</label>
                            <input type="text" class="form-control" id="ingText" required></input>
                        </div>
                        <div class="col-3 align-self-end ms-1">
                            <button class="btn btn-primary" id="addIng">Add Item</button>
                        </div>
                    </div> 
                    <div class="container">
                        <div class="row mt-3">
                            <div class="col-6">
                                <label for="ingList">Ingredients:</label>
                                <div class="list-group" id="ingList">
                                    <button type="button" class="list-group-item list-group-item-action" hidden>
                                        <p style="display: inline;">Dapibus ac facilisis in</p>
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16">
                                            <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5M8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5m3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0"/>
                                        </svg>
                                    </button>
                                </div>
                            </div>
                        </div> 
                    </div>
                    <div class="form-group pt-3">
                        <label for="instructions">Instructions</label>
                        <textarea class="form-control" name="instructions" id="instructions" rows="7" required></textarea>
                    </div>
                    <div class="form-group pt-3">
                        <label for="briefDescription">Brief Description</label>
                        <textarea class="form-control" name="briefDescription" id="briefDescription" rows="7" required></textarea>
                    </div>

                    <div class="row g-1 mt-3">
                        <div class="col-2">
                            <button class="btn btn-primary" id="submitBtn">Create Recipe</button>
                        </div>
                        <div class="col-2">
                            <a href="/recipes" class="btn btn-danger">Back</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="/js/new.js"></script>
</body>

<script>
    // Example starter JavaScript for disabling form submissions if there are invalid fields
    (function () {
        'use strict'

        // Fetch all the forms we want to apply custom Bootstrap validation styles to
        var forms = document.querySelectorAll('.needs-validation')

        // Loop over them and prevent submission
        Array.prototype.slice.call(forms)
            .forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }

                    form.classList.add('was-validated')
                }, false)
            })
    })()
</script>

</html >