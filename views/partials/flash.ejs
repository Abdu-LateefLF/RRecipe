<% if (failure && failure.length) {%>
    <div class="alert alert-warning alert-dismissible fade show mt-3" role="alert">
        <div class="row">
            <div class="col-11">
                <span><%= failure %></span>
            </div>
            <div class="col-1">
                <button type="button" id="alertBtn" class="btn close" data-bs-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
                </button>
            </div>
        </div>
      </div>
<% } %>